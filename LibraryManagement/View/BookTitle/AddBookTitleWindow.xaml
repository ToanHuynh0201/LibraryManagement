<Window x:Class="LibraryManagement.View.BookTitle.AddBookTitleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagement.View.BookTitle"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:viewmodel="clr-namespace:LibraryManagement.ViewModel"
        d:DataContext="{d:DesignInstance Type=viewmodel:BookTitleViewModel}"
        DataContext="{StaticResource BookTitleVM}"
        mc:Ignorable="d" 
        Height="700" 
        Width="800"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Title="AddBookTitleWindow" >
    <Border Background="#eff2f7"
            CornerRadius="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="5*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Label
                    Content="Thêm đầu sách"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="36"
                    FontWeight="Bold"/>

                <Button
                    Style="{StaticResource buttonClose}" 
                    Content="X" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Width="45"
                    Height="35"
                    FontSize="20"
                    Background="Red" 
                    Foreground="White"
                    Command="{Binding ExitCM}"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.5*"/>
                </Grid.ColumnDefinitions>
                <TextBox
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="20"
                    Padding="10"
                    Width="350"
                    materialDesign:HintAssist.Hint="Tên sách"
                    FontSize="18" Foreground="Black"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text=""/>

                <Grid Grid.Column="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.5*"/>
                            <RowDefinition Height="0.5*"/>
                        </Grid.RowDefinitions>

                        <ComboBox x:Name="categoryCombobox" 
                                  Grid.Row="0"
                                  Margin="10"
                                  Padding="10 0 5 0"
                                  Height="40"
                                  ItemsSource="{Binding Items}"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  materialDesign:HintAssist.HintOpacity=".7"
                                  IsEditable="True"
                                  materialDesign:HintAssist.Hint="Thể loại"
                                  SelectedValuePath=""
                                  Text=""
                                  FontSize="18"/>
                        <ComboBox x:Name="authorCombobox" 
                                  Grid.Row="1"
                                  Margin="10"
                                  Padding="10 0 5 0"
                                  Height="40"
                                  ItemsSource="{Binding Items}"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  materialDesign:HintAssist.HintOpacity=".7"
                                  IsEditable="True"
                                  materialDesign:HintAssist.Hint="Tác giả"
                                  SelectedValuePath=""
                                  Text=""
                                  FontSize="18"/>
                    </Grid>
                </Grid>
            </Grid>

            <DataGrid Style="{DynamicResource DataGridStyle1}"
                      CellStyle="{DynamicResource DataGridCellStyle1}"
                      ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                      RowStyle="{DynamicResource DataGridRowStyle1}"
                      x:Name="customerGrid" 
                      ItemsSource="{Binding ListBooks}"
                      SelectedItem="{Binding BookSeleted}"
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      Grid.Row="2">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDoubleClick">
                        <i:InvokeCommandAction Command="{Binding ViewBookCM}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn CanUserResize="False" 
                                            Width="Auto" 
                                            ElementStyle="{StaticResource CheckBoxStyle1}">
                        <DataGridCheckBoxColumn.HeaderTemplate>
                            <DataTemplate>
                                <CheckBox Style="{StaticResource CheckBoxStyle1}"/>
                            </DataTemplate>
                        </DataGridCheckBoxColumn.HeaderTemplate>
                    </DataGridCheckBoxColumn>

                    <DataGridTextColumn Header="" 
                             IsReadOnly="True" 
                             CanUserResize="False"
                             Width="Auto"/>
                    <DataGridTextColumn Header="ID" 
                             IsReadOnly="True" 
                             Width="Auto" 
                             Binding="{Binding ID}"/>
                    <DataGridTextColumn Header="Tác giả" 
                             IsReadOnly="True" 
                             Width="Auto" 
                             Binding="{Binding Author}"/>
                    <DataGridTemplateColumn Header="" IsReadOnly="True" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Style="{StaticResource gridRemoveButton}" 
                                            Margin="5 0 0 0"
                                            Command="{Binding ElementName=customerGrid, Path=DataContext.DeleteBookCM}">
                                        <materialDesign:PackIcon Kind="Bin"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="3"
                        Orientation="Horizontal">
                <Button Margin="650 0 0 0"
                        Width="120"
                        Height="50"
                        FontSize="20"
                        VerticalAlignment="Center"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="#473765"
                        BorderBrush="#FFEDE7F8"
                        materialDesign:ButtonAssist.CornerRadius="10">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch">
                        <materialDesign:PackIcon Kind="Add"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Left"
                                                 Margin="-15 0 0 0"/>
                        <TextBlock Text="Thêm"
                                   Margin="10 0 0 0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
