<Window x:Class="LibraryManagement.View.GroupUser.GroupUserInformtationWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      xmlns:local="clr-namespace:LibraryManagement.View.GroupUser"
      mc:Ignorable="d" 
      Height="700" 
      Width="800"
      Background="Transparent"
      ResizeMode="NoResize"
      WindowStartupLocation="CenterScreen"
      WindowStyle="None"
      Title="GroupUserInformtationWindow">

    <Border Background="#eff2f7"
        CornerRadius="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="3*"></RowDefinition>
                <RowDefinition Height="5*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Label Content="Chi tiết nhóm người dùng"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="30"
                   FontWeight="Bold"/>

                <Button Style="{StaticResource buttonClose}" 
                    Content="X" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Width="45"
                    Height="35"
                    FontSize="20"
                    Background="Red" 
                    Foreground="White"
                    Command="{Binding CloseWindowCM}"
                    CommandParameter="{Binding ElementName=bookTitleInformationWindow}"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.5*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="0.5*"/>
                    </Grid.RowDefinitions>
                    <TextBox VerticalAlignment="Center"
                         HorizontalAlignment="Center"
                         Margin="0,10,0,0"
                         Padding="10"
                         Width="350"
                         materialDesign:HintAssist.Hint="Mã nhóm"
                         FontSize="18" 
                         Foreground="Black"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Text="{Binding dausach.MaDauSach, Mode=TwoWay}"
                         IsEnabled="{Binding isEnabled}"/>

                    <TextBox Grid.Row="1"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"
                         Padding="10"
                         Width="350"
                         materialDesign:HintAssist.Hint="Tên nhóm"
                         FontSize="18" Foreground="Black"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Text="{Binding dausach.TenDauSach, Mode=TwoWay}"
                         IsEnabled="{Binding isEnabled}"/>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.5*"/>
                            <RowDefinition Height="0.5*"/>
                            <RowDefinition Height="0.3*"/>
                        </Grid.RowDefinitions>
                    </Grid>
                </Grid>
            </Grid>

            <DataGrid Style="{DynamicResource DataGridStyle1}"
                  CellStyle="{DynamicResource DataGridCellStyle1}"
                  ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                  RowStyle="{DynamicResource DataGridRowStyle1}"
                  x:Name="customerGrid" 
                  ItemsSource="{Binding AuthorBookList}"
                  SelectedItem="{Binding SelectedAuthorInList}"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  Grid.Row="2"
                  IsEnabled="{Binding isEnabled}" Margin="0,10,330,0">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn CanUserResize="False" 
                                    Width="Auto" 
                                    ElementStyle="{StaticResource CheckBoxStyle1}">
                        <DataGridCheckBoxColumn.HeaderTemplate>
                            <DataTemplate>
                                <CheckBox Style="{StaticResource CheckBoxStyle1}"/>
                            </DataTemplate>
                        </DataGridCheckBoxColumn.HeaderTemplate>
                    </DataGridCheckBoxColumn>

                    <DataGridTextColumn Header="" 
                         IsReadOnly="True" 
                         CanUserResize="False"
                         Width="Auto"/>
                    <DataGridTextColumn Header="ID" 
                         IsReadOnly="True" 
                         Width="Auto" 
                         Binding="{Binding MaTG}"/>
                    <DataGridTextColumn Header="Chức năng" 
                         IsReadOnly="True" 
                         Width="Auto" 
                         Binding="{Binding TenTG}"/>
                    <DataGridTextColumn Header="Tên màn hình" 
                         IsReadOnly="True" 
                         Width="Auto" 
                         Binding="{Binding TenTG}"/>
                    <DataGridTemplateColumn Header="" IsReadOnly="True" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Style="{StaticResource gridRemoveButton}" 
                                    Margin="5 0 0 0"
                                    Command="{Binding ElementName=customerGrid, Path=DataContext.DeleteAuthorFromListCM}">
                                        <materialDesign:PackIcon Kind="Bin"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="3"
                Orientation="Horizontal">
                <Button Margin="500 0 0 0"
                Width="150"
                Height="38"
                FontSize="18"
                VerticalAlignment="Center"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Background="#473765"
                BorderBrush="#FFEDE7F8"
                materialDesign:ButtonAssist.CornerRadius="10"
                Command="{Binding EnableUpdateCM}">
                    <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <materialDesign:PackIcon Kind="Add"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Left"
                                         Margin="-15 0 0 0"/>
                        <TextBlock Text="Chỉnh sửa"
                           Margin="10 0 0 0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button
                    Width="85"
                    Height="38"
                    FontSize="18"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="#473765"
                    Margin="20 0 0 0"
                    BorderBrush="#FFEDE7F8"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    Command="{Binding UpdateBookTitleCM}"
                    CommandParameter="{Binding ElementName=bookTitleInformationWindow}">
                    <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <materialDesign:PackIcon Kind="Add"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="0 0 0 0"/>
                        <TextBlock Text="Lưu"
                            Margin="0 0 0 0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
