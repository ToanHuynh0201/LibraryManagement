<Window x:Class="LibraryManagement.View.Book.BookInformtationWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:LibraryManagement.View"
        DataContext="{StaticResource BookInformationVM}"
        mc:Ignorable="d"
        Title="BookInformationWindow" WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        Height="450 " Width="821"
        WindowStartupLocation="CenterScreen"
        x:Name="bookInformationWindow">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="3.8*"/>
            <RowDefinition Height="0.4*"/>
        </Grid.RowDefinitions>

        <Border Grid.RowSpan="3"
            CornerRadius="5">
            <Border.Background>
                <SolidColorBrush>White</SolidColorBrush>
            </Border.Background>
        </Border>

        <!--Header-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="9.5*"/>
                <ColumnDefinition Width="0.7*"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Text="Thông tin sách"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="22"
                Margin="60 0 0 0"
                FontWeight="Bold"/>

            <Button 
                Grid.Column="1" 
                Content="X" 
                HorizontalAlignment="Left"
                FontSize="20"
                Width="53" 
                Background="Red" 
                Foreground="#FFE7DDDD"
                Height="47"
                Command="{Binding CloseWindowCM}"
                CommandParameter="{Binding ElementName=bookInformationWindow}"
                Margin="4,-1,0,1"/>
        </Grid>

        <Grid
        Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid
            Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!--Tên sách-->
                <Grid
                Grid.Row="0"
                Margin="10 10"/>

                <!--Nhà xuất bản-->
                <Grid
                Grid.Row="1" Margin="10 10">
                    <TextBox
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Hint="Nhà xuất bản"
                        FontSize="18" Foreground="Black"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding sach.NhaXB}"
                        IsReadOnly="True"
                        IsEnabled="False"/>
                    <TextBox
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Hint="Mã sách"
                        FontSize="18" Foreground="Black"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding sach.MaSach}"
                        IsReadOnly="True" IsEnabled="False" Margin="0,-69,0,0"/>
                    <TextBox
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Hint="Đầu sách"
                        FontSize="18" Foreground="Black"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding sach.DAUSACH.DisplayName, Mode=OneWay}"
                        IsReadOnly="True" IsEnabled="False" Margin="396,-69,-396,0"/>
                </Grid>

                <!--Thể loại sách-->
                <Grid
                Grid.Row="2" Margin="10 10"/>

                <!--Ngày nhập-->
                <Grid
                Grid.Row="3" Margin="0 15"/>

            </Grid>

            <Grid
            Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!--Tác giả-->
                <Grid
                 Grid.Row="0"
                 Margin="10 10"/>

                <!--Năm xuất bản-->
                <Grid
                Grid.Row="1" Margin="10 10">
                    <TextBox
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.Hint="Năm xuất bản"
                    Text="{Binding sach.NamXB}" IsReadOnly="True" IsEnabled="False"
                    FontSize="18" Foreground="Black"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="10,0,-10,0"/>
                </Grid>

                <!--Trị giá-->
                <Grid
                Grid.Row="2" Margin="10 10">
                    <TextBox
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Hint="Trị giá"
                        Text="{Binding sach.TriGia, StringFormat=N0}" Language="VI-vn" IsReadOnly="True" IsEnabled="False"
                        FontSize="18" Foreground="Black"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="-401,30,400,0"/>
                    <TextBox
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Hint="Số lượng"
                    Text="{Binding sach.SoLuong}" IsReadOnly="True" IsEnabled="False"
                    FontSize="18" Foreground="Black"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                </Grid>

                <!--Tình trạng-->
                <Grid
                Grid.Row="3" Margin="10 10">
                    <TextBox
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Hint="Số lượng còn"
                        Text="{Binding sach.SoLuongCon}" IsReadOnly="True" IsEnabled="False"
                        FontSize="18" Foreground="Black"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,-5,0,0"/>
                </Grid>
            </Grid>
        </Grid>
        <Grid
            Grid.Row="2">
            <Border
                BorderThickness="0 1 0 0"
                BorderBrush="Black"/>
        </Grid>
    </Grid>
</Window>
