<Window x:Class="LibraryManagement.View.Book.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:LibraryManagement.View"
        mc:Ignorable="d"
        Title="AddBookWindow" WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        Height="400 " Width="821"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="3.8*"/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>

            <Border 
                Grid.RowSpan="3"
                CornerRadius="5">
                <Border.Background>
                    <SolidColorBrush>White</SolidColorBrush>
                </Border.Background>
            </Border>

            <!--Header-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="9.5*"/>
                    <ColumnDefinition Width="0.7*"/>
                </Grid.ColumnDefinitions>
                <TextBlock
                     Text="Thêm sách"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"
                     FontSize="22"
                     Margin="60 0 0 0"
                     FontWeight="Bold"/>

                <Button Grid.Column="1" 
                     Content="X" 
                     HorizontalAlignment="Left"
                     FontSize="20"
                     Width="53" 
                     Background="Red" 
                     Foreground="#FFE7DDDD"
                     Height="40"
                     Command="{Binding ThoatCM}" Margin="4,-1,0,1"/>
            </Grid>

            <Grid
                Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid
                    Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!--Tên sách-->
                    <Grid
                         Grid.Row="0"
                         Margin="10 10">
                        <TextBox
                             VerticalAlignment="Center"
                             materialDesign:HintAssist.Hint="Tên sách"
                             FontSize="18" Foreground="Black"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Text=""
                             />
                    </Grid>

                    <!--Nhà xuất bản-->
                    <Grid
                        Grid.Row="1" Margin="10 10">
                        <TextBox
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="Nhà xuất bản"
                            FontSize="18" Foreground="Black"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text=""
                            />
                    </Grid>

                    <!--Thể loại sách-->
                    <Grid
                        Grid.Row="2" Margin="10 10">
                        <TextBox
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="Thể loại"
                            FontSize="18" 
                            Foreground="Black"
                            Text=""
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                    </Grid>

                    <!--Ngày nhập-->
                    <Grid
                        Grid.Row="3" Margin="10 19">
                        <DatePicker 
                            materialDesign:HintAssist.Hint="Ngày nhâp"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                            FontSize="18" 
                            />
                    </Grid>

                </Grid>

                <Grid
                    Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!--Tác giả-->
                    <Grid
                        Grid.Row="0"
                        Margin="10 10">
                        <TextBox
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="Tác giả"
                            FontSize="18" 
                            Foreground="Black"
                            Text=""
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                    </Grid>

                    <!--Năm xuất bản-->
                    <Grid
                        Grid.Row="1" Margin="10 10">
                        <TextBox
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="Năm xuất bản"
                            Text="" 
                            FontSize="18" Foreground="Black"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    </Grid>

                    <!--Trị giá-->
                    <Grid
                        Grid.Row="2" Margin="10 10">
                        <TextBox
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="Trị giá"
                            Text="" 
                            FontSize="18" Foreground="Black"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    </Grid>

                    <!--Tình trạng-->
                    <Grid
                        Grid.Row="3" Margin="10 10">
                        <TextBox
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="Tình trạng"
                            FontSize="18" 
                            Text=""
                            Foreground="Black"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                    </Grid>
                </Grid>
            </Grid>
            <Grid
                Grid.Row="2">
                <StackPanel Margin="0 0 0 10"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
                    <Button
                        Margin="10 0"
                        Content="Thêm mới"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="10"/>

                    <Button
                        Content="Thoát"
                        Margin="10 0"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="10"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>