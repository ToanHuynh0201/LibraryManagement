<Page x:Class="LibraryManagement.View.Rule"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryManagement.View"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      xmlns:viewmodel="clr-namespace:LibraryManagement.ViewModel"
      d:DataContext="{d:DesignInstance Type=viewmodel:RuleViewModel}"
      DataContext="{StaticResource RuleVM}"
      mc:Ignorable="d" 
      d:DesignHeight="740" 
      d:DesignWidth="840"
      Title="Rule"
      x:Name="RulePage">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadRuleCM}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Page.Triggers>
        <EventTrigger RoutedEvent="Page.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="RulePage"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0"
                                     To="1"
                                     Duration="0:0:0.3" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>
    <Border Background="#eff2f7"
            CornerRadius="30">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="0" 
                        Grid.Row="0"
                        Orientation="Vertical"
                        Margin="10 10 0 0">
                <TextBlock Text="Quy định độc giả"
                           FontSize="30"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0 10 0 0"/>

                <StackPanel Orientation="Horizontal"
                            Margin="10 20 0 0">
                    <TextBlock Text="Tuổi tối thiểu :"
                               FontSize="20"
                               FontWeight="DemiBold"/>
                    <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:TextFieldAssist.TextBoxViewMargin="0 0 10 0" 
                             FontSize="20"
                             Width="100"
                             Height="40"
                             Margin="84 0 0 0"
                             Text="{Binding CurrentRule.TuoiDGToiThieu}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="10 30 0 0">
                    <TextBlock Text="Tuổi tối đa :"
                               FontSize="18"
                               FontWeight="DemiBold"/>
                    <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:TextFieldAssist.TextBoxViewMargin="0 0 10 0" 
                             FontSize="20"
                             Width="100"
                             Height="40"
                             Margin="108 0 0 0"
                             Text="{Binding CurrentRule.TuoiDGToiDa}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="10 30 0 0">
                    <TextBlock Text="Số ngày được mượn :"
                               FontSize="20"
                               FontWeight="DemiBold"/>
                    <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:TextFieldAssist.TextBoxViewMargin="0 0 10 0" 
                             FontSize="20"
                             Width="100"
                             Height="40"
                             Margin="20 0 0 0"
                             Text="{Binding CurrentRule.SoNgayMuonToiDa}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="10 30 0 0">
                    <TextBlock Text="Số sách được mượn :"
                               FontSize="20"
                               FontWeight="DemiBold"/>
                    <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:TextFieldAssist.TextBoxViewMargin="0 0 10 0" 
                             FontSize="20"
                             Width="100"
                             Height="44"
                             Margin="24 0 0 0"
                             Text="{Binding CurrentRule.SoSachMuonToiDa}"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="1" 
                        Grid.Row="0"
                        Orientation="Vertical"
                        Margin="10 10 0 0">
                <TextBlock Text="Quy định sách"
                           FontSize="30"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0 10 0 0"/>

                <StackPanel Orientation="Horizontal"
                            Margin="10 20 0 0">
                    <TextBlock Text="Khoảng cách năm XB :"
                               FontSize="20"
                               FontWeight="DemiBold"/>
                    <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:TextFieldAssist.TextBoxViewMargin="0 0 10 0" 
                             FontSize="20"
                             Width="100"
                             Height="49"
                             Margin="40 0 0 0"
                             Text="{Binding CurrentRule.KhoangCachNamXB}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="10 30 0 0">
                    <TextBlock Text="Tiền phạt trễ :"
                               FontSize="20"
                               FontWeight="DemiBold"/>
                    <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:TextFieldAssist.TextBoxViewMargin="0 0 10 0" 
                             FontSize="20"
                             Width="100"
                             Height="50"
                             Margin="115 0 0 0"
                             Text="{Binding CurrentRule.TienPhatTre}"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Orientation="Horizontal"
                        Margin="0 250 0 0"
                        HorizontalAlignment="Center">
                <Button Content="Lưu thay đổi"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        materialDesign:ShadowAssist.ShadowAnimationDuration="0:0:0.5"
                        Style="{StaticResource MaterialDesignRaisedLightButton}"
                        Width="200"
                        Height="50"
                        FontSize="25"
                        FontWeight="Bold"
                        Margin="20 0 0 0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding UpdateRuleCM}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="15,344,5,0">
                <TextBlock Text="Áp dụng quy định thu phạt: "
                    FontSize="20"
                    FontWeight="DemiBold"/>
                <ComboBox Width="120"
                          Height="46"
                          FontSize="18"
                          ItemsSource="{Binding ApDungList}"
                          SelectedItem="{Binding SelectedApDung, Mode=TwoWay}"
                          IsEnabled="True">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource BoolToYesNoConverter}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
            <TextBlock Text="Giá trị thẻ: "
                    FontSize="20"
                    FontWeight="DemiBold" Margin="35,10,285,334" Grid.Row="1"/>
            <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    materialDesign:TextFieldAssist.TextBoxViewMargin="0 0 10 0" 
                    FontSize="20"
                    Width="100"
                    Height="40"
                    Margin="165,10,155,320"
                    Text="{Binding CurrentRule.GiaTriThe}" Grid.Row="1"/>
        </Grid>
    </Border>
</Page>
