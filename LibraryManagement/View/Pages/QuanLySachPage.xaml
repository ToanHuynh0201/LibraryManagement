<Page x:Class="LibraryManagement.View.Pages.QuanLySachPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryManagement.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="742" d:DesignWidth="863.076923076923"
      Title="QuanLySachPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>


        <Border Grid.RowSpan="2"
             CornerRadius="0 0 20 20">
            <Border.Background>
                <LinearGradientBrush 
         StartPoint="0,0" 
         EndPoint="0,1">
                    <GradientStop Color="#6760A4" 
                       Offset="0"/>
                    <GradientStop Color="#755BA6" 
                       Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>


        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <TextBlock 
                Grid.Column="0"
                Text="Quản lý sách"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="10 0 0 0"
                FontWeight="Bold"
                FontSize="25"
                Foreground="White"
 
                />

            <TextBox
                Grid.Column="1"
                VerticalAlignment="Center"
                FontSize="18" Foreground="White"
                FontWeight="Bold" Margin="0 0 10 5"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                Text="Tìm kiếm"/>       

            <Button
             Grid.Column="2"
             Margin="10 20"
             Content="Thêm"
             />
            <Button
             Grid.Column="3"
             Margin="10 20"
             Content="Xóa"
             />
            <Button
             Grid.Column="4"
             Margin="10 20"
             Content="Sửa"
             />


        </Grid>

        <Grid Grid.Row="1">
            <DataGrid
             Style="{DynamicResource MaterialDesignDataGrid}"
             CanUserAddRows="False"
             SelectionMode="Extended"
             SelectionUnit="Cell"
             x:Name="dgSach" 
             AutoGenerateColumns="False">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã sách" Width="1*" />
                    <DataGridTextColumn Header="Tên sách" Width="2.5*"  />
                    <DataGridTextColumn Header="Ngày nhập" Width="2.5*"  />
                    <DataGridTextColumn Header="Tình trạng" Width="2*"  />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Page>
