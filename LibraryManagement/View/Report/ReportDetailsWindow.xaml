<Window x:Class="LibraryManagement.View.Report.ReportDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagement.View.Report"
        mc:Ignorable="d"
        Title="ReportDetailsWindow" 
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        Height="550 " Width="700"
        WindowStartupLocation="CenterScreen">
    <Border 
        CornerRadius="10">
        <Border.Background>
            <SolidColorBrush>White</SolidColorBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Text="Chi tiết báo cáo"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Margin="50 10 0 5"/>

                <Button Grid.Column="1" 
                    Content="X" 
                    HorizontalAlignment="Right"
                    FontSize="15"
                    Width="43" 
                    Background="Red" 
                    Foreground="#FFE7DDDD"
                    Height="38"
                    Command="{Binding CloseWindowCM}"
                    CommandParameter="{Binding ElementName=addReaderWindow}"
                    Margin="4,-1,0,0" VerticalAlignment="Top"/>     
            </Grid>

            <Grid
                Grid.Row="1">
                <StackPanel
                    HorizontalAlignment="Left"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    Margin="30,0"
                    Width="auto">

                    <ComboBox
                        materialDesign:HintAssist.Hint="Tháng"
                        FontSize="18"
                        Width="100" 
                        Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                        IsEnabled="False"/>

                    <ComboBox
                        Margin="30 0 "
                        materialDesign:HintAssist.Hint="Năm"
                        Width="100"
                        FontSize="18"
                        Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                        IsEnabled="False"/>
                </StackPanel>

                <StackPanel
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    VerticalAlignment="Bottom"
                    Margin="15,0, 30, 0"
                    Width="auto">

                    <Label
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontFamily="A"
                        Content="Tổng số lượt mượn: "/>

                    <TextBlock
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontFamily="A"
                        Text="123"/>

                </StackPanel>
            </Grid>

            <Grid Grid.Row="2">
                <DataGrid 
                    Style="{DynamicResource DataGridStyle1}"
                    CellStyle="{DynamicResource DataGridCellStyle1}"
                    ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                    RowStyle="{DynamicResource DataGridRowStyle1}"
                    x:Name="customerGrid" 
                    ItemsSource="{Binding}" 
                    AutoGenerateColumns="False" 
                    IsReadOnly="True"
                    Grid.Row="1">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding}"/>
                            <!-- ADD COMMENT RIGHT HERE -->
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn CanUserResize="False" 
                            Width="Auto" 
                            ElementStyle="{StaticResource CheckBoxStyle1}">
                            <DataGridCheckBoxColumn.HeaderTemplate>
                                <DataTemplate>
                                    <CheckBox Style="{StaticResource CheckBoxStyle1}"/>
                                </DataTemplate>
                            </DataGridCheckBoxColumn.HeaderTemplate>
                        </DataGridCheckBoxColumn>

                        <DataGridTextColumn Header="ID" 
                            IsReadOnly="True" 
                            Width="Auto" 
                            Binding="{Binding}"/>
                        <!-- BINDING DATA RIGHT HERE -->

                        <DataGridTextColumn Header="Tên thể loại" 
                            IsReadOnly="True" 
                            CanUserResize="False"
                            Width="Auto"/>      
                        <!-- BINDING DATA RIGHT HERE -->

                        <DataGridTextColumn Header="Số lượt mượn" 
                            IsReadOnly="True" 
                            Width="Auto" 
                            Binding="{Binding}"/>
                        <!-- BINDING DATA RIGHT HERE -->

                        <DataGridTextColumn Header="Tỷ lệ" 
                            IsReadOnly="True" 
                            Width="Auto" 
                            Binding="{Binding}"/>
                        <!-- BINDING DATA RIGHT HERE -->
                        <DataGridTemplateColumn Header="" IsReadOnly="True" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Style="{StaticResource gridEditButton}"
                                            Command="{Binding ElementName=customerGrid, Path=DataContext.UpdateBookCM}"/>
                                        <Button Style="{StaticResource gridRemoveButton}" 
                                            Margin="5 0 0 0" 
                                            Command="{Binding ElementName=customerGrid, Path=DataContext.DeleteBookCM}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Border>
</Window>
