<Window x:Class="LibraryManagement.View.Receipt.AddPenaltyReceiptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Background="Transparent"
        xmlns:local="clr-namespace:LibraryManagement.View.Receipt"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" 
        Title="AddPenaltyReceiptWindow" Height="550" Width="480 ">
    <Grid>
        <Border
            CornerRadius="10">
            <Border.Background>
                <SolidColorBrush>White</SolidColorBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        Text="Thêm phiếu thu phạt"
                        HorizontalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Margin="50 10 0 5"/>

                    <Button Grid.Column="1" 
                        Content="X" 
                        HorizontalAlignment="Right"
                        FontSize="15"
                        Width="43" 
                        Background="Red" 
                        Foreground="#FFE7DDDD"
                        Height="35"
                        Command="{Binding CloseWindowCM}"
                        CommandParameter="{Binding ElementName=addReaderWindow}"
                        Margin="4,-1,0,0" VerticalAlignment="Top"/>
                </Grid>
                
               

                <StackPanel
                    Grid.Row="1"
                    Orientation="Vertical"
                    Margin="20 10">

                    <ComboBox
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Hint="Độc giả"
                        FontSize="18"
                        Foreground="Black"
                        IsEditable="True"
                        DisplayMemberPath=""
                        SelectedValuePath=""
                        SelectedValue=""
                        Margin="0 0 0 20"
                        Style="{StaticResource MaterialDesignFloatingHintComboBox}" />

                    <TextBox
                        materialDesign:HintAssist.Hint="Tổng nợ hiện tại"
                        FontSize="18" Foreground="Black"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Margin="0 20"
                        IsReadOnly="True"/>

                    <TextBox
                        materialDesign:HintAssist.Hint="Số tiền thu"
                        FontSize="18" Foreground="Black"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Margin="0 20"
                        />

                    <TextBox
                        materialDesign:HintAssist.Hint="Còn lại"
                        FontSize="18" Foreground="Black"
                        Margin="0 20"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>

                    <DatePicker 
                        materialDesign:HintAssist.Hint="Ngày thu"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                        Margin="0 20 0 0"
                        FontSize="18" 
                        />
                </StackPanel>

                <Button 
                    Grid.Row="2"
                    Margin="30 0" 
                    Content="Thêm mới" 
                    materialDesign:ButtonAssist.CornerRadius="10"/>
                <!-- ADD COMMENT RIGHT HERE -->

            </Grid>
        </Border>

        
    </Grid>
</Window>
