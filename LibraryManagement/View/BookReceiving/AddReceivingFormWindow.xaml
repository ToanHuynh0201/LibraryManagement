<Window x:Class="LibraryManagement.View.BookReceiving.AddReceivingFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:LibraryManagement.View"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:viewmodel="clr-namespace:LibraryManagement.ViewModel"
        d:DataContext="{d:DesignInstance Type=viewmodel:BookCopyViewModel}"
        DataContext="{StaticResource BookCopyVM}"
        mc:Ignorable="d" 
        d:DesignHeight="700" 
        d:DesignWidth="840"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        Title="AddReceivingFormWindow">
    <Border Background="#eff2f7"
        CornerRadius="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="3*"></RowDefinition>
                <RowDefinition Height="5*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Label
                Content="Phiếu nhập sách"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="36"
                FontWeight="Bold"/>

                <Button
                Style="{StaticResource buttonClose}" 
                Content="X" 
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Width="45"
                Height="35"
                FontSize="20"
                Background="Red" 
                Foreground="White"
                Command="{Binding ExitCM}"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.5*"/>
                </Grid.ColumnDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="0.5*"/>
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             Margin="15 0 0 0"
                             Height="50"
                             Padding="10"
                             Width="350"
                             materialDesign:HintAssist.Hint="Số phiếu"
                             FontSize="18" Foreground="Black"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Text=""/>
                    <DatePicker Grid.Row="1"
                                Margin="15 0 0 0"
                                Height="50"
                                Padding="10"
                                Width="350"
                                materialDesign:HintAssist.Hint="Ngày nhâp"
                                materialDesign:TextFieldAssist.HasClearButton="True"
                                Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                                FontSize="18"
                                HorizontalAlignment="Left"/>
                    <TextBox Grid.Row="2"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             Margin="15 0 0 0"
                             Height="50"
                             Padding="10"
                             Width="350"
                             materialDesign:HintAssist.Hint="Tổng tiền"
                             FontSize="18" Foreground="Black"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Text=""/>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="37*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.5*"/>
                            <RowDefinition Height="0.5*"/>
                        </Grid.RowDefinitions>

                        <ComboBox x:Name="Combobox"
                              Margin="10,0,10,0"
                              Padding="10 0 5 0"
                              Height="40"
                              ItemsSource="{Binding Items}"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.HintOpacity=".7"
                              IsEditable="True"
                              materialDesign:HintAssist.Hint="Danh sách sách"
                              SelectedValuePath=""
                              Text=""
                              FontSize="18" Grid.ColumnSpan="2"/>
                        <TextBox Grid.Row="1"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Left"
                                 Margin="15,0,0,0"
                                 Height="50"
                                 Padding="10"
                                 Width="350"
                                 materialDesign:HintAssist.Hint="Số lượng"
                                 FontSize="18" Foreground="Black"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 Text="" Grid.ColumnSpan="2"/>
                    </Grid>
                </Grid>
            </Grid>

            <DataGrid Style="{DynamicResource DataGridStyle1}"
                  CellStyle="{DynamicResource DataGridCellStyle1}"
                  ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                  RowStyle="{DynamicResource DataGridRowStyle1}"
                  x:Name="customerGrid" 
                  ItemsSource="{Binding ListBooks}"
                  SelectedItem="{Binding BookSeleted}"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  Grid.Row="2">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDoubleClick">
                        <i:InvokeCommandAction Command="{Binding ViewBookCM}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn CanUserResize="False" 
                                        Width="Auto" 
                                        ElementStyle="{StaticResource CheckBoxStyle1}">
                        <DataGridCheckBoxColumn.HeaderTemplate>
                            <DataTemplate>
                                <CheckBox Style="{StaticResource CheckBoxStyle1}"/>
                            </DataTemplate>
                        </DataGridCheckBoxColumn.HeaderTemplate>
                    </DataGridCheckBoxColumn>

                    <DataGridTextColumn Header="" 
                    IsReadOnly="True" 
                    CanUserResize="False"
                    Width="Auto"/>
                    <DataGridTextColumn Header="ID" 
                    IsReadOnly="True" 
                    Width="Auto" 
                    Binding="{Binding ID}"/>
                    <DataGridTextColumn Header="Tên sách" 
                    IsReadOnly="True" 
                    Width="250" 
                    Binding= "{Binding Name}"/>
                    <DataGridTextColumn Header="Tác giả" 
                    IsReadOnly="True" 
                    Width="Auto" 
                    Binding="{Binding Author}"/>
                    <DataGridTextColumn Header="NXB" 
                    IsReadOnly="True" 
                    Width="Auto" 
                    Binding="{Binding PublishingHouse}"/>
                    <DataGridTemplateColumn Header="" IsReadOnly="True" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Style="{StaticResource gridRemoveButton}" 
                                        Margin="5 0 0 0"
                                        Command="{Binding ElementName=customerGrid, Path=DataContext.DeleteBookCM}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="3"
                    Orientation="Horizontal">
                <Button Margin="540 0 0 0"
                    Width="120"
                    Height="50"
                    FontSize="20"
                    VerticalAlignment="Center"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="#473765"
                    BorderBrush="#FFEDE7F8"
                    materialDesign:ButtonAssist.CornerRadius="10">
                    <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                        <materialDesign:PackIcon Kind="Add"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Left"
                                             Margin="-15 0 0 0"/>
                        <TextBlock Text="Thêm"
                               Margin="10 0 0 0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Margin="20 0 0 0"
                        Width="140"
                        Height="50"
                        FontSize="20"
                        VerticalAlignment="Center"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="#473765"
                        BorderBrush="#FFEDE7F8"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        IsEnabled="{Binding isEnabled}">
                    <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                        <TextBlock Text="Xác nhận"
                               Margin="0 0 0 0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
