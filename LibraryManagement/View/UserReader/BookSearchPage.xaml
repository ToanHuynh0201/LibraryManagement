<Page x:Class="LibraryManagement.View.UserReader.BookSearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryManagement.View.UserReader"
      mc:Ignorable="d" 
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      xmlns:viewmodel="clr-namespace:LibraryManagement.ViewModel"
      d:DataContext="{d:DesignInstance Type=viewmodel:BookViewModel}"
      DataContext="{StaticResource BookVM}"
      mc:Ignorable="d" 
      d:DesignHeight="740" 
      d:DesignWidth="840"
      Background="Transparent"
      Title="BookSearchPage"
      x:Name="bookSearchPage">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadDataBookCM}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Page.Triggers>
        <EventTrigger RoutedEvent="Page.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="bookSearchPage"
                                 Storyboard.TargetProperty="Opacity"
                                 From="0"
                                 To="1"
                                 Duration="0:0:0.3" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>
    <Border Background="#eff2f7"
        CornerRadius="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"
                  Margin="0 40 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!--Search TextBox-->
                <Grid Margin="30 0 0 0"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Left"
                  Width="200">
                    <TextBox Style="{StaticResource SearchTextBox}"
                         Height="35"
                         Text="{Binding Path=SearchText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="TextChanged">
                                <i:InvokeCommandAction Command="{Binding SearchBookCM}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBox>
                    <materialDesign:PackIcon Kind="Magnify"
                                         Width="20"
                                         Height="20"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Right"
                                         Margin="0 0 10 0"/>
                </Grid>
                <StackPanel Grid.Column="1"
                            Orientation="Vertical"
                            >

                    <!--ComboBox-->
                    <ComboBox materialDesign:ComboBoxAssist.MaxLength="5"
                      materialDesign:HintAssist.Hint="Thể loại"
                      materialDesign:HintAssist.HintOpacity=".7"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      Padding="10 0 5 0"
                      IsEditable="True"
                      Margin="10 0 0 0" 
                      VerticalAlignment="Center" 
                      HorizontalAlignment="Left"
                      Height="40"
                      Width="170"
                      ItemsSource="{Binding SearchList}" 
                      SelectedItem="{Binding SearchProperties, Mode=TwoWay}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding ResetSearchDataCM}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ComboBox>

                    <!--ComboBox-->
                    <ComboBox materialDesign:ComboBoxAssist.MaxLength="5"
                      materialDesign:HintAssist.Hint="Tác giả"
                      materialDesign:HintAssist.HintOpacity=".7"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      Padding="10 0 5 0"
                      IsEditable="True"
                      Margin="10 20 0 0" 
                      VerticalAlignment="Center" 
                      HorizontalAlignment="Left"
                      Height="40"
                      Width="170"
                      ItemsSource="{Binding SearchList}" 
                      SelectedItem="{Binding SearchProperties, Mode=TwoWay}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding ResetSearchDataCM}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ComboBox>
                </StackPanel>
                
                <Grid Grid.Column="2">

                    <!--ComboBox-->
                    <ComboBox materialDesign:ComboBoxAssist.MaxLength="5"
                      materialDesign:HintAssist.Hint="Tính trạng"
                      materialDesign:HintAssist.HintOpacity=".7"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      Padding="10 0 5 0"
                      IsEditable="True"
                      Margin="10 0 0 0" 
                      VerticalAlignment="Center" 
                      HorizontalAlignment="Left"
                      Height="40"
                      Width="150"
                      ItemsSource="{Binding SearchList}" 
                      SelectedItem="{Binding SearchProperties, Mode=TwoWay}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding ResetSearchDataCM}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ComboBox>
                </Grid>

                
                <!--<Button Margin="450 0 0 0"
                    Width="100"
                    Height="40"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="#FF2ABF2B"
                    BorderBrush="#FFEDE7F8"
                    materialDesign:ButtonAssist.CornerRadius="10">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                    <materialDesign:PackIcon Kind="Add"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             Margin="-15 0 0 0"/>
                    <TextBlock Text="Tác giả"
                               Margin="10 0 0 0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction Command="{Binding AddAuthorCM}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
            <Button Margin="690 0 0 0"
                    Width="100"
                    Height="40"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="#473765"
                    BorderBrush="#FFEDE7F8"
                    materialDesign:ButtonAssist.CornerRadius="10">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                    <materialDesign:PackIcon Kind="Add"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             Margin="-15 0 0 0"/>
                    <TextBlock Text="Thể loại"
                               Margin="10 0 0 0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction Command="{Binding AddCategoryCM}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>-->
                <Button Grid.Column="3"
                        Height="40"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="#473765"
                        BorderBrush="#FFEDE7F8"
                        materialDesign:ButtonAssist.CornerRadius="10">
                    <StackPanel Orientation="Horizontal"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch">
                        <TextBlock Text="Tìm kiếm"
                    Margin="0 0 0 0"
                                   FontSize="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
                    </StackPanel>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding OpenAddBookCM}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>
            </Grid>
            
            

            <DataGrid  Style="{DynamicResource DataGridStyle1}"
                   CellStyle="{DynamicResource DataGridCellStyle1}"
                   ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                   RowStyle="{DynamicResource DataGridRowStyle1}"
                   x:Name="customerGrid" 
                   ItemsSource="{Binding ListBooks}"
                   SelectedItem="{Binding BookSeleted}"
                   AutoGenerateColumns="False" 
                   IsReadOnly="True"
                   Grid.Row="1">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDoubleClick">
                        <i:InvokeCommandAction Command="{Binding ViewBookCM}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn CanUserResize="False" 
                                        Width="Auto" 
                                        ElementStyle="{StaticResource CheckBoxStyle1}">
                        <DataGridCheckBoxColumn.HeaderTemplate>
                            <DataTemplate>
                                <CheckBox Style="{StaticResource CheckBoxStyle1}"/>
                            </DataTemplate>
                        </DataGridCheckBoxColumn.HeaderTemplate>
                    </DataGridCheckBoxColumn>

                    <DataGridTextColumn Header="" 
                                    IsReadOnly="True" 
                                    CanUserResize="False"
                                    Width="Auto"/>
                    <DataGridTextColumn Header="Mã sách" 
                                    IsReadOnly="True" 
                                    Width="Auto" 
                                    Binding="{Binding MaSach}"/>
                    <DataGridTextColumn Header="Tên đầu sách" 
                                    IsReadOnly="True" 
                                    Width="Auto" 
                                    Binding= "{Binding DAUSACH.DisplayName}"/>
                    <DataGridTextColumn Header="Thể loại" 
                                    IsReadOnly="True" 
                                    Width="Auto" 
                                    Binding= "{Binding}"/>
                    <DataGridTextColumn Header="Năm XB" 
                                    IsReadOnly="True" 
                                    Width="Auto" 
                                    Binding= "{Binding NamXB}"/>
                    <DataGridTextColumn Header="Nhà XB" 
                                    IsReadOnly="True" 
                                    Width="Auto" 
                                    Binding= "{Binding NhaXB}"/>
                    <DataGridTextColumn Header="Tác giả" 
                                    IsReadOnly="True" 
                                    Width="Auto" 
                                    Binding="{Binding SoLuong}"/>
                    <DataGridTextColumn Header="Tình trạng" 
                                    IsReadOnly="True" 
                                    Width="Auto" 
                                    Binding="{Binding SoLuongCon}"/>
                    <DataGridTemplateColumn Header="" IsReadOnly="True" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Style="{StaticResource gridRemoveButton}" 
                                        Margin="5 0 0 0" 
                                        Command="{Binding ElementName=customerGrid, Path=DataContext.DeleteBookCM}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</Page>
