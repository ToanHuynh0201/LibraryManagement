<Window x:Class="LibraryManagement.View.Users.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagement.View.Users"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
        xmlns:viewmodel="clr-namespace:LibraryManagement.ViewModel"
        Style="{StaticResource MaterialDesignWindow}"
        DataContext="{StaticResource AuthorVM}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Title="AddUserWindow"
        Height="450" Width="800"
        x:Name="addUserWindow">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding GetThisWindowCM}"
                               CommandParameter="{Binding ElementName=mainWindow}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Border CornerRadius="25"
            Background="#eff2f7"
            BorderThickness="3"
            BorderBrush="Black">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.ColumnSpan="2">
                    <TextBlock Grid.Column="0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="36"
                               FontWeight="Bold"
                               Text="Thêm người dùng"/>
                </Grid>
                
                <Grid Grid.Column="1">
                    <Button Grid.Column="1"
                        Style="{StaticResource buttonClose}" 
                        Content="X" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="35"
                        Height="30"
                        FontSize="20"
                        Background="Red" 
                        Foreground="White"
                        Command="{Binding CloseWindowCM}"/>
                </Grid>
                
            </Grid>

            <TextBox Grid.Row="1"
                     Grid.Column="0"
                     VerticalAlignment="Center"
                     materialDesign:HintAssist.Hint="Tên đăng nhập"
                     Text="{Binding GiaNhap, StringFormat=N0}" 
                     FontSize="24" Foreground="Black"
                     Height="60"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Margin="10"/>

            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     VerticalAlignment="Center"
                     materialDesign:HintAssist.Hint="Mật khẩu"
                     Text="{Binding GiaNhap, StringFormat=N0}" 
                     FontSize="24" Foreground="Black"
                     Height="60"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Margin="10"/>

            <TextBox Grid.Row="2"
                     Grid.Column="0"
                     VerticalAlignment="Center"
                     materialDesign:HintAssist.Hint="Tên người dùng"
                     Text="{Binding GiaNhap, StringFormat=N0}" 
                     FontSize="24" Foreground="Black"
                     Height="60"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Margin="10"/>

            <ComboBox Grid.Row="2"
                      Grid.Column="1"
                      materialDesign:ComboBoxAssist.MaxLength="5"
                      materialDesign:HintAssist.Hint="Nhóm người dùng"
                      materialDesign:HintAssist.HintOpacity=".7"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      Padding="10 0 5 0"
                      IsEditable="True"
                      Margin="10" 
                      VerticalAlignment="Center" 
                      HorizontalAlignment="Left"
                      Height="60"
                      Width="350"
                      ItemsSource="{Binding SearchList}" 
                      SelectedItem="{Binding SearchProperties, Mode=TwoWay}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding ResetSearchDataCM}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ComboBox>

            <Button Grid.Column="1"
                    Grid.Row="3"
                    Content="Lưu tác giả"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    materialDesign:ShadowAssist.ShadowAnimationDuration="0:0:0.5"
                    Style="{StaticResource MaterialDesignRaisedLightButton}"
                    Width="150"
                    Height="40"
                    Background="#473765"
                    Foreground="White"
                    FontSize="20"
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 0 0 0"
                    Command="{Binding AddNewAuthorCM}"
                    CommandParameter="{Binding ElementName=addAuthorWindow}"/>
        </Grid>
    </Border>
</Window>
