<Page x:Class="LibraryManagement.View.Account"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryManagement.View"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      xmlns:viewmodel="clr-namespace:LibraryManagement.ViewModel"
      DataContext="{StaticResource AccountVM}"
      mc:Ignorable="d" 
      d:DesignHeight="740" 
      d:DesignWidth="840"
      Title="Account"
      Background="Transparent"
      x:Name="AccountPage">
    <Page.Triggers>
        <EventTrigger RoutedEvent="Page.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="AccountPage"
                                 Storyboard.TargetProperty="Opacity"
                                 From="0"
                                 To="1"
                                 Duration="0:0:0.3" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>

    <Border Background="#eff2f7"
            CornerRadius="30">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Grid.Column="0"
                  Grid.Row="0">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="ToanHuynh"
                               FontSize="30"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="#E5531795"
                               Margin="0 10 0 0"/>
                    <Ellipse Margin="0 20 0 0"
                             Width="200"
                             Height="200"
                             Stroke="Black"
                             StrokeThickness="2">
                        <Ellipse.Fill>
                            <ImageBrush Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Button Height="40"
                            Width="180"
                            Cursor="Hand"
                            HorizontalAlignment="Center"
                            Style="{StaticResource ultisButton}"
                            Command="{Binding UpdateImageCM}">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Plus"
                                                     VerticalAlignment="Center"
                                                     Width="15"
                                                     Height="15"
                                                     Margin="0 0 10 0"/>
                            <TextBlock Text="Cập nhật ảnh" 
                                       FontWeight="Bold"
                                       FontSize="15"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <Grid Grid.Column="1"
                  Grid.Row="0">
                <StackPanel Margin="20 40 0 0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Họ và tên"
                                   FontSize="20"
                                   FontWeight="Bold"/>
                        <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:TextFieldAssist.TextBoxViewMargin="0 0 10 0" 
                                 FontSize="20"
                                 Width="250"
                                 Height="25"
                                 Margin="63 0 0 0"
                                 IsReadOnly="True"
                                 Text="{Binding CurrentStaff}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="0 30 0 0">
                        <TextBlock Text="Số điện thoại"
                                   FontSize="20"
                                   FontWeight="Bold"/>
                        <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:TextFieldAssist.TextBoxViewMargin="0 0 10 0" 
                                 FontSize="20"
                                 Width="250"
                                 Height="25"
                                 Margin="30 0 0 0"
                                 IsReadOnly="True"
                                 Text="{Binding CurrentStaff}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="0 30 0 0">
                        <TextBlock Text="Ngày sinh"
                                   FontSize="20"
                                   FontWeight="Bold"/>
                        <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:TextFieldAssist.TextBoxViewMargin="0 0 10 0" 
                                 FontSize="20"
                                 Width="250"
                                 Height="25"
                                 Margin="60 0 0 0"
                                 IsReadOnly="True"
                                 Text="{Binding CurrentStaff}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="0 30 0 0">
                        <TextBlock Text="Giới tính"
                                   FontSize="20"
                                   FontWeight="Bold"/>
                        <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:TextFieldAssist.TextBoxViewMargin="0 0 10 0" 
                                 FontSize="20"
                                 Width="250"
                                 Height="25"
                                 Margin="72.5 0 0 0"
                                 IsReadOnly="True"
                                 Text="{Binding CurrentStaff}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="0 30 0 0">
                        <TextBlock Text="Email"
                                   FontSize="20"
                                   FontWeight="Bold"/>
                        <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:TextFieldAssist.TextBoxViewMargin="0 0 10 0" 
                                 FontSize="20"
                                 Width="250"
                                 Height="25"
                                 Margin="103 0 0 0"
                                 IsReadOnly="True"
                                 Text="{Binding CurrentStaff}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>


            <Grid Grid.Row="1"
                  Grid.ColumnSpan="2">
                <StackPanel Margin="30 20 30 20"
                            Orientation="Vertical">
                    <TextBlock Text="Thông tin tài khoản"
                               FontSize="30"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0 10 0 0"/>
                    <StackPanel Orientation="Horizontal"
                                Width="500"
                                Margin="0 20 0 0">
                        <TextBlock Text="Tên tài khoản"
                                   FontWeight="Bold"
                                   FontSize="25"
                                   Margin="0 0 30 0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 Width="300"
                                 Height="35"
                                 FontSize="25"
                                 IsReadOnly="True"
                                 Text="{Binding CurrentStaff}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Width="500"
                                Margin="0 20 0 0">
                        <TextBlock Text="Mật khẩu"
                                   FontWeight="Bold"
                                   FontSize="25"
                                   Margin="0 0 30 0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 Width="300"
                                 Height="35"
                                 FontSize="25"
                                 IsReadOnly="True"
                                 Margin="46 0 0 0"
                                 Text="{Binding CurrentStaff}"/>
                    </StackPanel>

                    <StackPanel Margin="0 100 0 0"
                                Width="auto"
                                Height="auto"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <Button Style="{StaticResource ultisButton}"
                                Width="180"
                                Command="{Binding ChangePassCM}"
                                Content="Đổi mật khẩu"
                                FontSize="20"
                                FontWeight="Bold"
                                Margin="20"/>
                        
                        <Button Style="{StaticResource ultisButton}"
                                Width="180"
                                Command="{Binding LogoutCM}"
                                Content="Đăng Xuất"
                                FontSize="20"
                                FontWeight="Bold"
                                Margin="20 0 0 0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Page>
