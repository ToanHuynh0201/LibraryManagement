<Page x:Class="LibraryManagement.View.Account"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryManagement.View"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      xmlns:viewmodel="clr-namespace:LibraryManagement.ViewModel"
      DataContext="{StaticResource AccountVM}"
      mc:Ignorable="d" 
      d:DesignHeight="740" 
      d:DesignWidth="840"
      Title="Account"
      Background="Transparent"
      x:Name="AccountPage">
    <Page.Triggers>
        <EventTrigger RoutedEvent="Page.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="AccountPage"
                                 Storyboard.TargetProperty="Opacity"
                                 From="0"
                                 To="1"
                                 Duration="0:0:0.3" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadDataCM}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Border Background="#eff2f7"
            CornerRadius="30">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="1.3*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Column="1"
                  Grid.Row="0">
                <StackPanel Margin="20 40 0 0"
                            HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Tên người dùng"
                                   FontSize="20"
                                   FontWeight="Bold"/>
                        <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:TextFieldAssist.TextBoxViewMargin="0 0 10 0" 
                                 FontSize="20"
                                 Width="250"
                                 Height="25"
                                 Margin="63 0 0 0"
                                 IsReadOnly="True"
                                 Text="{Binding TenNguoiDung}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="0 30 0 0">
                        <TextBlock Text="Tên tài khoản:"
                                   FontSize="20"
                                   FontWeight="Bold"/>
                        <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:TextFieldAssist.TextBoxViewMargin="0 0 10 0" 
                                 FontSize="20"
                                 Width="250"
                                 Height="25"
                                 Margin="58 0 0 0"
                                 IsReadOnly="True"
                                 Text="{Binding TenTaiKhoan}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="0 30 0 0">
                        <TextBlock Text="Nhóm:"
                                   FontSize="20"
                                   FontWeight="Bold"/>
                        <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:TextFieldAssist.TextBoxViewMargin="0 0 10 0" 
                                 FontSize="20"
                                 Width="250"
                                 Height="25"
                                 Margin="90 0 0 0"
                                 IsReadOnly="True"
                                 Text="{Binding TenNhom}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>


            <Grid Margin="10,240,10,82" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.6*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Row="1"
                    Background="#eff2f7"
                    CornerRadius="30"
                    Margin="20 0 0 10"
                    BorderThickness="2"
                    BorderBrush="Black">
                    <DataGrid Style="{DynamicResource DataGridStyle1}"
                          CellStyle="{DynamicResource DataGridCellStyle1}"
                          ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                          RowStyle="{DynamicResource DataGridRowStyle1}"
                          x:Name="customerGrid" 
                          ItemsSource="{Binding DanhSachChucNang}"
                          IsReadOnly="True"
                          Grid.Row="2" HorizontalAlignment="Right" Margin="0,10,0,0" Width="480">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" 
                                            IsReadOnly="True" 
                                            Width="Auto" 
                                            Binding="{Binding MaChucNang}"/>
                            <DataGridTextColumn Header="Chức năng" 
                                            IsReadOnly="True" 
                                            Width="Auto" 
                                            Binding= "{Binding TenChucNang}"/>
                            <DataGridTextColumn Header="Màn hình" 
                                        IsReadOnly="True" 
                                        Width="Auto" 
                                        Binding="{Binding TenManHinh}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <Button Margin="0 0 0 20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Width="200"
                        Height="50"
                        FontSize="20"
                        Grid.Column="1"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="#473765"
                        Content="Đổi mật khẩu"
                        BorderBrush="#FFEDE7F8"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Command="{Binding ChangePasswordCM}">
                </Button>
            </Grid>
        </Grid>
    </Border>
</Page>
