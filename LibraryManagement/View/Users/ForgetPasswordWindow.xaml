<Window x:Class="LibraryManagement.View.Users.ForgetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagement.View.Users"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
        xmlns:viewmodel="clr-namespace:LibraryManagement.ViewModel"
        Style="{StaticResource MaterialDesignWindow}"
        DataContext="{StaticResource AuthorVM}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Title="ForgetPasswordWindow" 
        Height="360" 
        Width="600">
    <Border CornerRadius="25"
    Background="#eff2f7"
    BorderThickness="3"
    BorderBrush="Black">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Button Style="{StaticResource buttonClose}" 
                    Content="X" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Width="35"
                    Height="30"
                    FontSize="20"
                    Background="Red" 
                    Foreground="White"
                    Command="{Binding CloseWindowCM}"/>
            </Grid>
            <StackPanel Orientation="Vertical"
                    Grid.Row="1">
                <TextBlock Text="Đổi mật khẩu"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="36"
                       FontWeight="Bold"/>

                <StackPanel Orientation="Horizontal"
                        Margin="10 30 0 0">
                    <TextBlock Text="Mật khẩu: "
                           FontSize="30"
                           FontWeight="DemiBold"/>
                    <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"                             
                             materialDesign:TextFieldAssist.TextBoxViewMargin="0 0 0 5"
                             FontSize="30"
                             Width="250"
                             Margin="142 0 0 0"
                             Padding="0 0 0 0"
                             Text="{Binding tacgia.TenTG, Mode=TwoWay}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="10 30 0 0">
                    <TextBlock Text="Xác nhận mật khẩu: "
                               FontSize="30"
                               FontWeight="DemiBold"/>
                    <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"                             
                             materialDesign:TextFieldAssist.TextBoxViewMargin="0 0 0 5"
                             FontSize="30"
                             Width="250"
                             Height="35"
                             Margin="10 0 0 0"
                             Padding="0 0 0 0"
                             Text="{Binding tacgia.TenTG, Mode=TwoWay}"/>
                </StackPanel>

                <Button Content="Đổi mật khẩu"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    materialDesign:ShadowAssist.ShadowAnimationDuration="0:0:0.5"
                    Style="{StaticResource MaterialDesignRaisedLightButton}"
                    Width="200"
                    Height="40"
                    Background="#473765"
                    Foreground="White"
                    FontSize="20"
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 70 0 0"
                    Command="{Binding AddNewAuthorCM}"
                    CommandParameter="{Binding ElementName=addAuthorWindow}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
