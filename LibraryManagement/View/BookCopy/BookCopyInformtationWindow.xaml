<Window x:Class="LibraryManagement.View.BookCopy.BookCopyInformtationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:LibraryManagement.View"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:viewmodel="clr-namespace:LibraryManagement.ViewModel"
        d:DataContext="{d:DesignInstance Type=viewmodel:BookCopyViewModel}"
        DataContext="{StaticResource BookCopyVM}"
        mc:Ignorable="d" 
        d:DesignHeight="500" 
        d:DesignWidth="840"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        Title="BookCopyInformtationWindow">
    <Border Background="#eff2f7"
            CornerRadius="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="6*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Label Content="Chi tiết cuốn sách"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="36"
                       FontWeight="Bold"/>

                <Button Style="{StaticResource buttonClose}" 
                        Content="X" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="45"
                        Height="35"
                        FontSize="20"
                        Background="Red" 
                        Foreground="White"
                        Command="{Binding ExitCM}"/>
            </Grid>

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal">
                <Button Margin="630 0 0 0"
                        Width="150"
                        Height="50"
                        FontSize="20"
                        VerticalAlignment="Center"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="#473765"
                        BorderBrush="#FFEDE7F8"
                        materialDesign:ButtonAssist.CornerRadius="10">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch">
                        <materialDesign:PackIcon Kind="Add"
                                                 VerticalAlignment="Center"
                                                 HorizontalAlignment="Left"
                                                 Margin="-15 0 0 0"/>
                        <TextBlock Text="Chỉnh sửa"
                                   Margin="10 0 0 0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>


            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0"
                         Grid.Column="0"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Left"
                         Margin="20"
                         Padding="10"
                         Width="360"
                         Height="60"
                         materialDesign:HintAssist.Hint="Mã cuốn sách"
                         FontSize="24" 
                         Foreground="Black"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Text=""
                         IsEnabled="{Binding isEnabled}"/>
                
                <TextBox Grid.Row="1"
                         Grid.Column="0"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Left"
                         Margin="20"
                         Padding="10"
                         Width="360"
                         Height="60"
                         materialDesign:HintAssist.Hint="Mã sách"
                         FontSize="24" 
                         Foreground="Black"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Text=""
                         IsEnabled="{Binding isEnabled}"/>
                <TextBox Grid.Row="2"
                         Grid.Column="0"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Left"
                         Margin="20"
                         Padding="10"
                         Width="360"
                         Height="60"
                         materialDesign:HintAssist.Hint="Mã đầu sách"
                         FontSize="24" 
                         Foreground="Black"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Text=""
                         IsEnabled="{Binding isEnabled}"/>
                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Left"
                         Margin="20"
                         Padding="10"
                         Width="360"
                         Height="60"
                         materialDesign:HintAssist.Hint="Tên đầu sách"
                         FontSize="24" 
                         Foreground="Black"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Text=""
                         IsEnabled="{Binding isEnabled}"/>
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Left"
                         Margin="20"
                         Padding="10"
                         Width="360"
                         Height="60"
                         materialDesign:HintAssist.Hint="Tình trạng"
                         FontSize="24" 
                         Foreground="Black"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Text=""
                         IsEnabled="{Binding isEnabled}"/>
            </Grid>
        </Grid>
    </Border>
</Window>
