<Window x:Class="LibraryManagement.View.Borrow.BorrowFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:LibraryManagement.View"
        mc:Ignorable="d"
        Title="BorrowFormWindow" WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        Height="400 " Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Border Grid.RowSpan="3"
                    CornerRadius="5">
            <Border.Background>
                <SolidColorBrush>White</SolidColorBrush>
            </Border.Background>
        </Border>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="9.5*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                 Text="Lập phiếu mượn"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"
                 FontSize="15"
                 Margin="60 0 0 0"
                 FontWeight="Bold"/>

            <Button 
                Content="X" 
                HorizontalAlignment="right"
                FontSize="13"
                Width="40" 
                Height="28"
                Background="Red" 
                Foreground="#FFE7DDDD"
                Command="{Binding ThoatCM}" Margin="0,-1,0,0" Grid.Column="1"/>
        </Grid>

        <Grid
            Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--Tên độc giả-->
            <Grid
                 Grid.Row="0"
                 Margin="10 10">
                <TextBox
                     VerticalAlignment="Center"
                     materialDesign:HintAssist.Hint="Tên độc giả"
                     FontSize="15" Foreground="Black"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     IsEnabled="false"
                     Text=""/>
                <!--Chỗ này kh nhập nhé, binding từ dữ liệu để lấy tên độc giả-->

            </Grid>

            <!--Chọn sách-->
            <Grid
                Grid.Row="1" Margin="10 10">
                <ComboBox
                    MinWidth="72"
                    materialDesign:HintAssist.Hint="Chọn sách"
                    IsEditable="True"
                    FontSize="15"
                    ItemsSource="{Binding LongIntegerList}">
                    <ComboBox.Text>
                        <Binding
                            Mode="TwoWay"
                            Path="SelectedTextTwo"
                            UpdateSourceTrigger="PropertyChanged">
                        </Binding>
                    </ComboBox.Text>
                </ComboBox>
            </Grid>

            <!--Ngày mượn-->
            <Grid
                Grid.Row="2" Margin="10 14">
                <DatePicker 
                    materialDesign:HintAssist.Hint="Ngày nhâp"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                    FontSize="15" 
                    />
            </Grid>

            <!--Ngày trả-->
            <Grid
                Grid.Row="3" Margin="10 14">
                <DatePicker 
                    Text="12/3/2024"
                    materialDesign:HintAssist.Hint="Ngày trả"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                    FontSize="15" 
                    />
            </Grid>

        </Grid>

        <Grid
        Grid.Row="2">
            <StackPanel 
                Orientation="Horizontal"
                HorizontalAlignment="Right">
                <Button
                    Margin="10 0"
                    Content="Lưu thông tin"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    materialDesign:ButtonAssist.CornerRadius="10"
                    />
                <Button
                    Content="Thoát"
                    Margin="10 0"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    materialDesign:ButtonAssist.CornerRadius="10"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>