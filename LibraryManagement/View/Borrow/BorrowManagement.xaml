<Page x:Class="LibraryManagement.View.Borrow.BorrowManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryManagement.View.Borrow"
      mc:Ignorable="d" 
      Background="Transparent"
      d:DesignHeight="740" 
      d:DesignWidth="840"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      Title="BorrowManagement">
    <Border CornerRadius="10">
        <Border.Background>
            <SolidColorBrush>White</SolidColorBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.8*"/>
                <RowDefinition Height="0.8*"/>
                <RowDefinition Height="9*"/>
            </Grid.RowDefinitions>

            <!--Searching/Adding section-->
            <StackPanel
                Orientation="Horizontal"
                Margin="30 5">
                <TextBox
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.Hint="Tìm kiếm phiếu mượn"
                    Text="" 
                    Width="200"
                    FontSize="18" Foreground="Black"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                <materialDesign:PackIcon 
                    Kind="Magnify"
                    Width="20"
                    Height="20"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="0 10 0 0"/>

                <Button
                    Margin="30 5 0 0"
                    Width="120"
                    Height="40"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="#473765"
                    BorderBrush="#FFEDE7F8"
                    materialDesign:ButtonAssist.CornerRadius="10">
                    <StackPanel 
                        Orientation="Horizontal"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <materialDesign:PackIcon Kind="Book"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="-15 2 0 0"/>
                        <TextBlock Text="Trả sách"
                            Margin="10 0 0 0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </StackPanel>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding}"/>
                            <!-- ADD COMMAND RIGHT HERE -->
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>

                <Button
                    Margin="30 5 0 0"
                    Width="160"
                    Height="40"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="#473765"
                    BorderBrush="#FFEDE7F8"
                    materialDesign:ButtonAssist.CornerRadius="10">
                    <StackPanel 
                        Orientation="Horizontal"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">

                        <materialDesign:PackIcon Kind="Add"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="-15 0 0 0"/>
                        <TextBlock Text="Tạo phiếu mượn"
                            Margin="10 0 0 0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </StackPanel>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding}"/>
                            <!-- ADD COMMAND RIGHT HERE -->
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>


                <!--<Button
                    Margin="30 5 0 0"
                    Width="160"
                    Height="40"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="#DC143C"
                    BorderBrush="#FFEDE7F8"
                    materialDesign:ButtonAssist.CornerRadius="10">      
                    <StackPanel 
                        Orientation="Horizontal"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <materialDesign:PackIcon Kind="Trash"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="-15 0 0 0"/>
                        <TextBlock Text="Xóa phiếu mượn"
                            Margin="10 0 0 0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </StackPanel>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding}"/>
                            --><!-- ADD COMMAND RIGHT HERE --><!--
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>-->
            </StackPanel>

            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        Margin="30 0 0 0 ">
                <ComboBox
                    MinWidth="180"
                    Height="40"
                    materialDesign:HintAssist.Hint="Tình trạng mượn"
                    IsEditable="True"
                    FontSize="18"
                    ItemsSource="{Binding LongIntegerList}">        
                    <ComboBox.Text>
                        <Binding
                        Mode="TwoWay"
                        Path="SelectedTextTwo"
                        UpdateSourceTrigger="PropertyChanged">
                        </Binding>
                    </ComboBox.Text>
                </ComboBox>

                <ComboBox
                    Margin="30 0 0 0 "
                    MinWidth="180"
                    Height="40"
                    materialDesign:HintAssist.Hint="Thời gian đến hạn"
                    IsEditable="True"
                    FontSize="18"
                    ItemsSource="{Binding LongIntegerList}">
                    <ComboBox.Text>
                        <Binding
                        Mode="TwoWay"
                        Path="SelectedTextTwo"
                        UpdateSourceTrigger="PropertyChanged">  
                        </Binding>
                    </ComboBox.Text>
                </ComboBox>
            </StackPanel>

            <Grid Grid.Row="2">
                <!-- BINDING SOURCE AND SELECTED ITEM (Missing selected item) -->
                <DataGrid 
                    Style="{DynamicResource DataGridStyle1}"
                    CellStyle="{DynamicResource DataGridCellStyle1}"
                    ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                    RowStyle="{DynamicResource DataGridRowStyle1}"
                    x:Name="customerGrid" 
                    ItemsSource="{Binding}" 
                    AutoGenerateColumns="False" 
                    IsReadOnly="True"
                    Grid.Row="1">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding}"/>
                            <!-- ADD COMMAND RIGHT HERE -->
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn CanUserResize="False" 
                            Width="Auto" 
                            ElementStyle="{StaticResource CheckBoxStyle1}">
                            <DataGridCheckBoxColumn.HeaderTemplate>
                                <DataTemplate>
                                    <CheckBox Style="{StaticResource CheckBoxStyle1}"/>
                                </DataTemplate>
                            </DataGridCheckBoxColumn.HeaderTemplate>
                        </DataGridCheckBoxColumn>

                        <DataGridTextColumn Header="Số phiếu" 
                            IsReadOnly="True" 
                            Width="Auto" 
                            Binding="{Binding}"/>
                        <!-- BINDING DATA RIGHT HERE -->

                        <DataGridTextColumn Header="Độc giả" 
                            IsReadOnly="True" 
                            CanUserResize="False"
                            Width="Auto"/>
                        <!-- BINDING DATA RIGHT HERE -->

                        <DataGridTextColumn Header="Tên sách" 
                            IsReadOnly="True" 
                            Width="Auto" 
                            Binding="{Binding}"/>
                        <!-- BINDING DATA RIGHT HERE -->

                        <DataGridTextColumn Header="Ngày mượn" 
                            IsReadOnly="True" 
                            Width="Auto" 
                            Binding="{Binding}"/>
                        <!-- BINDING DATA RIGHT HERE -->

                        <DataGridTextColumn Header="Hạn trả" 
                            IsReadOnly="True" 
                            Width="Auto" 
                            Binding="{Binding}"/>
                        <!-- BINDING DATA RIGHT HERE -->
                        
                        <DataGridTextColumn Header="Ngày trả" 
                            IsReadOnly="True" 
                            Width="Auto" 
                            Binding="{Binding}"/>
                        <!-- BINDING DATA RIGHT HERE -->

                        <DataGridTextColumn Header="Số tiền phạt" 
                            IsReadOnly="True" 
                            Width="Auto" 
                            Binding="{Binding}"/>       
                        <!-- BINDING DATA RIGHT HERE -->

                        <DataGridTemplateColumn Header="" IsReadOnly="True" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Style="{StaticResource gridEditButton}"
                                            Command="{Binding ElementName=customerGrid, Path=DataContext.UpdateBookCM}"/>
                                        <Button Style="{StaticResource gridRemoveButton}" 
                                            Margin="5 0 0 0" 
                                            Command="{Binding ElementName=customerGrid, Path=DataContext.DeleteBookCM}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Border>
</Page>
