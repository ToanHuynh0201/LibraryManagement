<Page x:Class="LibraryManagement.View.Reader.ReaderInformationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryManagement.View.Reader"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      
      d:DesignHeight="740" 
      d:DesignWidth="840"
      Title="ReaderInformationPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="3.8*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>

        <Border Grid.RowSpan="3"
        CornerRadius="5">
            <Border.Background>
                <SolidColorBrush>White</SolidColorBrush>
            </Border.Background>
        </Border>

        <!--Header-->
        <Grid>
            <TextBlock
            Text="Thông tin độc giả"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            FontSize="22"
            Margin="60 0 0 0"
            FontWeight="Bold"/>
        </Grid>
        <Grid
        Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid
            Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!--Họ và tên-->
                <Grid
                Grid.Row="0"
                Margin="10 10">
                    <TextBox
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.Hint="Họ và tên"
                    FontSize="18" Foreground="Black"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="Tri Đóm chúa"
                    IsReadOnly="True"/>
                </Grid>

                <!--Ngày sinh-->
                <Grid
                Grid.Row="1" Margin="10 10">
                    <DatePicker
                    materialDesign:HintAssist.Hint="Ngày sinh"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                    FontSize="18" IsEnabled="False"
                    Text="12/03/2005"/>
                </Grid>

                <!--Loại độc giả-->
                <Grid
                Grid.Row="2" Margin="10 10">
                    <TextBox
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.Hint="Loại độc giả"
                    FontSize="18"
                    Foreground="Black"
                    Text="X" IsReadOnly="True"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                </Grid>

                <!--Ngày tạo thẻ-->
                <Grid
                Grid.Row="3" Margin="10 10">
                    <DatePicker
                    materialDesign:HintAssist.Hint="Ngày tạo thẻ"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                    FontSize="18" IsEnabled="False"
                    Text="12/03/2025"/>
                </Grid>

            </Grid>

            <Grid
            Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!--CMND/CCCD-->
                <Grid
                 Grid.Row="0"
                 Margin="10 10">
                    <TextBox
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.Hint="CMND/CCCD"
                    Text="123454123" IsReadOnly="True"
                    FontSize="18" Foreground="Black"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                </Grid>

                <!--Email-->
                <Grid
                Grid.Row="1" Margin="10 10">
                    <TextBox
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.Hint="Email"
                    Text="example@gmail.com" IsReadOnly="True"
                    FontSize="18" Foreground="Black"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                </Grid>

                <!--Địa chỉ-->
                <Grid
                Grid.Row="2" Margin="10 10">
                    <TextBox
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.Hint="Địa chỉ"
                    FontSize="18" IsReadOnly="True"
                    Foreground="Black"
                    Text="Truong UIT"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                </Grid>

                <!--Tổng tiền nợ-->
                <Grid
                Grid.Row="3" Margin="10 10">
                    <TextBox
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.Hint="Tổng tiền nợ"
                    FontSize="18"
                    Text="21 Củ" IsReadOnly="True"
                    Foreground="Black"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                </Grid>
            </Grid>
        </Grid>

        <Grid
        Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="9*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>

                <TextBlock 
                Grid.Column="0"
                Text="Danh sách phiếu mượn"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="20 0 0 0"
                FontWeight="Bold"
                FontSize="20"
                Foreground="Black"
 
                />


            </Grid>

            <DataGrid
            
            Grid.Row="1"
            Style="{DynamicResource MaterialDesignDataGrid}"
            CanUserAddRows="False"
            SelectionMode="Extended"
            SelectionUnit="Cell"
            x:Name="dgSach" 
            AutoGenerateColumns="False">

                <DataGrid.Columns>
                    <!-- Cột CheckBox -->
                    <DataGridTemplateColumn>

                        <!-- Các ô trong cột CheckBox -->
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Số phiếu" 
IsReadOnly="True" 
Width="Auto" 
Binding="{Binding}"/>
                    <!-- BINDING DATA RIGHT HERE -->

                    <DataGridTextColumn Header="Tên sách" 
IsReadOnly="True" 
Width="Auto" 
Binding="{Binding}"/>
                    <!-- BINDING DATA RIGHT HERE -->

                    <DataGridTextColumn Header="Ngày mượn" 
IsReadOnly="True" 
Width="Auto" 
Binding="{Binding}"/>
                    <!-- BINDING DATA RIGHT HERE -->

                    <DataGridTextColumn Header="Hạn trả" 
IsReadOnly="True" 
Width="Auto" 
Binding="{Binding}"/>
                    <!-- BINDING DATA RIGHT HERE -->

                    <DataGridTextColumn Header="Ngày trả" 
IsReadOnly="True" 
Width="Auto" 
Binding="{Binding}"/>
                    <!-- BINDING DATA RIGHT HERE -->

                    <DataGridTextColumn Header="Số tiền phạt" 
IsReadOnly="True" 
Width="Auto" 
Binding="{Binding}"/>
                    <!-- BINDING DATA RIGHT HERE -->
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

    </Grid>
</Page>
