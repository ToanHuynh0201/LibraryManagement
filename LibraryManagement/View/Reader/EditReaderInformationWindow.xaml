<Window x:Class="LibraryManagement.View.Reader.EditReaderInformationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:LibraryManagement.View"
        mc:Ignorable="d"
        DataContext="{StaticResource ReaderVM}"
        Title="EditReaderInformationWindow" WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        Height="400 " Width="821"
        WindowStartupLocation="CenterScreen"
        Name="editReaderWindow">
    <Grid>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="3.8*"/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>

            <Border 
                Grid.RowSpan="3"
                CornerRadius="5">
                <Border.Background>
                    <SolidColorBrush>White</SolidColorBrush>
                </Border.Background>
            </Border>

            <!--Header-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="9.5*"/>
                    <ColumnDefinition Width="0.7*"/>
                </Grid.ColumnDefinitions>
                <TextBlock
                     Text="Sửa thông tin thẻ độc giả"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"
                     FontSize="22"
                     Margin="60 0 0 0"
                     FontWeight="Bold"/>

                <Button Grid.Column="1" 
                    Content="X" 
                    HorizontalAlignment="Left"
                    FontSize="20"
                    Width="53" 
                    Background="Red" 
                    Foreground="#FFE7DDDD"
                    Height="40"
                    Command="{Binding UpdateReaderCM}"
                    CommandParameter="{Binding ElementName=editReaderWindow}"
                    Margin="4,-1,0,0" VerticalAlignment="Top"/>
            </Grid>

            <Grid
        Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid
            Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!--Họ và ten-->
                    <Grid
                        Grid.Row="0"
                        Margin="10 10">
                        <TextBox
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="Họ và tên"
                            FontSize="18" Foreground="Black"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="{Binding ReaderSeleted.TenDG, Mode=TwoWay}"
                     />
                    </Grid>

                    <!--Ngày sinh-->
                    <Grid
                        Grid.Row="1" Margin="10 19">
                        <DatePicker 
                            materialDesign:HintAssist.Hint="Ngày sinh"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                            FontSize="18" 
                            Text="{Binding ReaderSeleted.NgaySinhDG, Mode=TwoWay}"
                    />
                    </Grid>

                    <!--Loại độc giả-->
                    <Grid
                        Grid.Row="2" Margin="10 10">
                        <ComboBox
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="Loại độc giả"
                            FontSize="18"
                            Foreground="Black"
                            IsEditable="True"
                            ItemsSource="{Binding LoaiDocGiaList}"
                            DisplayMemberPath=""
                            SelectedValuePath=""
                            SelectedValue=""
                            Style="{StaticResource MaterialDesignFloatingHintComboBox}" />
                    </Grid>

                    <!--Ngày tạo thẻ-->
                    <Grid
                        Grid.Row="3" Margin="10 19">
                        <DatePicker 
                            materialDesign:HintAssist.Hint="Ngày tạo thẻ"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                            FontSize="18" 
                            Text="{Binding ReaderSeleted.NgayLapThe, Mode=TwoWay}"
                    />
                    </Grid>

                </Grid>

                <Grid
                    Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!--CMND/CCCD-->
                    <Grid
                        Grid.Row="0"
                        Margin="10 10"/>

                    <!--Email-->
                    <Grid
                        Grid.Row="1" Margin="10 10">
                        <TextBox
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="Email"
                            Text="{Binding ReaderSeleted.Email, Mode=TwoWay}"
                            FontSize="18" Foreground="Black"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    </Grid>

                    <!--Địa chỉ-->
                    <Grid
                        Grid.Row="2" Margin="10 10">
                        <TextBox
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="Địa chỉ"
                            Text="{Binding ReaderSeleted.DiaChiDG, Mode=TwoWay}"
                            FontSize="18" Foreground="Black"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Row="2">
                <StackPanel 
                    Margin="0 0 0 10"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
                    <Button
                        Margin="10 0"
                        Content="Lưu thông tin"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Command="{Binding UpdateReaderCM}"
                        CommandParameter="{Binding ElementName=editReaderWindow}"/>
                    <Button
                        Content="Thoát"
                        Margin="10 0"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        Command="{Binding CloseWindowCM}"
                        CommandParameter="{Binding ElementName=editReaderWindow}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
