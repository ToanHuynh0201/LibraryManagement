<Window x:Class="LibraryManagement.View.Reader.AddReaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:LibraryManagement.View" xmlns:viewmodel="clr-namespace:LibraryManagement.ViewModel"
        DataContext="{StaticResource ReaderVM}"
        mc:Ignorable="d"
        Title="AddReaderWindow" WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        Height="400 " Width="821"
        WindowStartupLocation="CenterScreen"
        Name="addReaderWindow">
    <Grid>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="3.8*"/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>

            <Border Grid.RowSpan="3"
     CornerRadius="5">
                <Border.Background>
                    <!--<LinearGradientBrush 
         StartPoint="0,0" 
         EndPoint="0,1">
         <GradientStop Color="#8681B6" 
       Offset="0"/>
         <GradientStop Color="#917CB8" 
       Offset="1"/>
     </LinearGradientBrush>-->
                    <SolidColorBrush>White</SolidColorBrush>
                </Border.Background>
            </Border>

            <!--Header-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="9.5*"/>
                    <ColumnDefinition Width="0.7*"/>
                </Grid.ColumnDefinitions>
                <TextBlock
                 Text="Thêm thẻ độc giả"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"
                 FontSize="22"
                 Margin="60 0 0 0"
                 FontWeight="Bold"/>

                <Button Grid.Column="1" 
                        Content="X" 
                        HorizontalAlignment="Left"
                        FontSize="20"
                        Width="53" 
                        Background="Red" 
                        Foreground="#FFE7DDDD"
                        Height="40"
                        Command="{Binding CloseWindowCM}"
                        CommandParameter="{Binding ElementName=addReaderWindow}"
                        Margin="4,-1,0,0" VerticalAlignment="Top"/>
            </Grid>

            <Grid
            Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid
                Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!--Họ và ten-->
                    <Grid
                     Grid.Row="0"
                     Margin="10 10">
                        <TextBox
                         VerticalAlignment="Center"
                         materialDesign:HintAssist.Hint="Họ và tên"
                         FontSize="18" Foreground="Black"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Text="{Binding docgia.TenDG, Mode=TwoWay}"
                         />
                    </Grid>

                    <!--Ngày sinh-->
                    <Grid
                    Grid.Row="1" Margin="10 19">
                        <DatePicker 
                        materialDesign:HintAssist.Hint="Ngày sinh"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                        FontSize="18" 
                        Text="{Binding docgia.NgaySinhDG, Mode=TwoWay}"
                        />
                    </Grid>

                    <!--Loại độc giả-->
                    <Grid
                    Grid.Row="2" Margin="10 10">
                        <TextBox
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Hint="Loại độc giả"
                        FontSize="18" 
                        Foreground="Black"
                        Text="{Binding docgia.MaLoaiDG, Mode=TwoWay}"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                    </Grid>

                    <!--Ngày tạo thẻ-->
                    <Grid
                    Grid.Row="3" Margin="10 19">
                        <DatePicker 
                        materialDesign:HintAssist.Hint="Ngày lập thẻ"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        Text="{Binding docgia.NgayLapThe, Mode=TwoWay}"
                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                        FontSize="18" 
                        />
                    </Grid>

                </Grid>

                <Grid
                Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!--CMND/CCCD-->
                    <Grid
                    Grid.Row="0"
                    Margin="10 10">
                        <TextBox
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Hint="Tên đăng nhập"
                        FontSize="18" 
                        Foreground="Black"
                        Text="{Binding docgia.TenDangNhap, Mode=TwoWay}"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                    </Grid>

                    <!--Email-->
                    <Grid
                    Grid.Row="1" Margin="10 10">
                        <TextBox
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Hint="Email"
                        FontSize="18" Foreground="Black"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding docgia.Email, Mode=TwoWay}"/>
                    </Grid>

                    <!--Địa chỉ-->
                    <Grid
                    Grid.Row="2" Margin="10 10">
                        <TextBox
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Hint="Địa chỉ"
                        Text="{Binding docgia.DiaChiDG, Mode=TwoWay}" 
                        FontSize="18" Foreground="Black"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    </Grid>

                    <!--Tình trạng-->
                    <!--
                    <Grid
                    Grid.Row="3" Margin="10 10">
                        <TextBox
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Hint="Tình trạng"
                        FontSize="18" 
                        Text=""
                        Foreground="Black"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                    </Grid>-->
                </Grid>
            </Grid>
            <Grid Grid.Row="2">
                <StackPanel Margin="0 0 0 10"
                Orientation="Horizontal"
                HorizontalAlignment="Right">
                    <Button Margin="10 0" Content="Thêm mới" materialDesign:ButtonAssist.CornerRadius="10"
                            Command="{Binding AddNewReaderCM}"
                            CommandParameter="{Binding ElementName=addReaderWindow}"/>
                    <Button Content="Thoát" Margin="10 0" materialDesign:ButtonAssist.CornerRadius="10"
                            Command="{Binding CloseWindowCM}"
                            CommandParameter="{Binding ElementName=addReaderWindow}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
