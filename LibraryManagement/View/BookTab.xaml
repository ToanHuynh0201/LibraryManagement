<Page x:Class="LibraryManagement.View.BookTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryManagement.View"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      xmlns:viewmodel="clr-namespace:LibraryManagement.ViewModel"
      d:DataContext="{d:DesignInstance Type=viewmodel:BookViewModel}"
      DataContext="{StaticResource BookManagementVM}"
      mc:Ignorable="d" 
      d:DesignHeight="740" 
      d:DesignWidth="840"
      Background="Transparent"
      x:Name="BookManagementPage"
      Title="BookTab">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding GetNavigationFrameCM}"
                               CommandParameter="{Binding ElementName=stasticFrame}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Page.Triggers>
        <EventTrigger RoutedEvent="Page.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="StatPage"
                         Storyboard.TargetProperty="Opacity"
                         From="0"
                         To="1"
                         Duration="0:0:0.3" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>
    <Border Background="#eff2f7"
        CornerRadius="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>

            <Border CornerRadius="30" 
                BorderBrush="Black" 
                BorderThickness="1" 
                Margin="30,20,30,10">
                <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        Margin="0 0 0 0">
                    <Button Style="{StaticResource barButton}"
                        Content="Đầu sách"
                        FontWeight="Bold"
                        Foreground="MediumPurple"
                        FontSize="24"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Height="50" 
                        Width="100"
                        Margin="0 0 20 0"/>
                    <Button Style="{StaticResource barButton}"
                        Content="Sách"
                        FontWeight="Bold"
                        Foreground="#FF2ABF2B"
                        FontSize="24"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Height="50" 
                        Width="100"
                        Margin="0 0 20 0"/>
                    <Button Style="{StaticResource barButton}"
                        Content="Cuốn sách"
                        FontWeight="Bold"
                        Foreground="MediumPurple"
                        FontSize="24"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Height="50" 
                        Width="120"
                        Margin="0 0 20 0"/>
                    <Button Style="{StaticResource barButton}"
                        Content="Nhập sách"
                        FontWeight="Bold"
                        Foreground="#FF2ABF2B"
                        FontSize="24"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Height="50" 
                        Width="130"
                        Margin="0 0 20 0"/>
                    <Button Style="{StaticResource barButton}"
                        Content="Tác giả"
                        FontWeight="Bold"
                        Foreground="MediumPurple"
                        FontSize="24"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Height="50" 
                        Width="100"
                        Margin="0 0 20 0"/>
                    <Button Style="{StaticResource barButton}"
                        Content="Thể loại"
                        FontWeight="Bold"
                        Foreground="#FF2ABF2B"
                        FontSize="24"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Height="50" 
                        Width="100"/>
                </StackPanel>
            </Border>

            <Frame x:Name="mainFrame"
               Grid.Row="1"
               Margin="10"
               Background="Transparent"
               NavigationUIVisibility="Hidden"/>
        </Grid>
    </Border>
</Page>
