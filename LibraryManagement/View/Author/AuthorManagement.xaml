<Page x:Class="LibraryManagement.View.Author.AuthorManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagement.View"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:viewmodel="clr-namespace:LibraryManagement.ViewModel"
        DataContext="{StaticResource AuthorVM}"
        Background="Transparent"
        Title="AuthorManagement" 
        
      d:DesignHeight="740" 
      d:DesignWidth="840"
        x:Name="authorWindow">
    <Border CornerRadius="25"
            Background="#eff2f7"
            BorderThickness="3"
            BorderBrush="Black">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Margin="30 30 0 0"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Left"
                  Width="200">
                <TextBox Style="{StaticResource SearchTextBox}"
                         Height="35"
                         Text="{Binding Path=SearchText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="TextChanged">
                            <i:InvokeCommandAction Command="{Binding SearchAuthorCM}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>
                <materialDesign:PackIcon Kind="Magnify"
                                         Width="20"
                                         Height="20"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Right"
                                         Margin="0 0 10 0"/>
            </Grid>
            <ComboBox materialDesign:ComboBoxAssist.MaxLength="2"
                      materialDesign:HintAssist.Hint="Tìm theo..."
                      materialDesign:HintAssist.HintOpacity=".7"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      Padding="10 0 5 0"
                      IsEditable="True"
                      Margin="260 30 0 0" 
                      VerticalAlignment="Center" 
                      HorizontalAlignment="Left"
                      Height="40"
                      Width="200"
                      ItemsSource="{Binding SearchList}" 
                      SelectedItem="{Binding SearchProperties, Mode=TwoWay}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding ResetDataCM}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ComboBox>

            <Button Margin="280 30 0 0"
                    Width="150"
                    Height="40"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="#473765"
                    BorderBrush="#FFEDE7F8"
                    materialDesign:ButtonAssist.CornerRadius="10">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                    <materialDesign:PackIcon Kind="Add"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Left"
                                 Margin="-15 0 0 0"/>
                    <TextBlock Text="Thêm tác giả"
                               Margin="10 0 0 0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction Command="{Binding OpenAddAuthorCM}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
            <Grid Grid.Row="1"
                  Margin="0 20 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <DataGrid Style="{DynamicResource DataGridStyle1}"
                          CellStyle="{DynamicResource DataGridCellStyle1}"
                          ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                          RowStyle="{DynamicResource DataGridRowStyle1}"
                          x:Name="authorGrid" 
                          ItemsSource="{Binding ListAuthors}"
                          SelectedItem="{Binding AuthorSelected}"
                          AutoGenerateColumns="False" IsReadOnly="True"
                          Grid.Column="0" Grid.ColumnSpan="2">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Loaded">
                            <i:InvokeCommandAction Command="{Binding LoadDataAuthorCM}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn CanUserResize="False" 
                                                Width="Auto" 
                                                ElementStyle="{StaticResource CheckBoxStyle1}">
                            <DataGridCheckBoxColumn.HeaderTemplate>
                                <DataTemplate>
                                    <CheckBox Style="{StaticResource CheckBoxStyle1}"/>
                                </DataTemplate>
                            </DataGridCheckBoxColumn.HeaderTemplate>
                        </DataGridCheckBoxColumn>

                        <DataGridTextColumn Header="" 
                                            IsReadOnly="True" 
                                            CanUserResize="False"
                                            Width="Auto"/>
                        <DataGridTextColumn Header="ID" 
                                            IsReadOnly="True" 
                                            Width="Auto" 
                                            Binding="{Binding MaTG}"/>
                        <DataGridTextColumn Header="Tên tác giả" 
                                            IsReadOnly="True" 
                                            Width="auto" 
                                            Binding= "{Binding TenTG}"/>
                        <DataGridTemplateColumn Header="" IsReadOnly="True" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Style="{StaticResource gridRemoveButton}" 
                                                Margin="5 0 0 0" 
                                                Command="{Binding ElementName=authorGrid, 
                                                                  Path=DataContext.DeleteAuthorCM}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <Grid Grid.Column="1"
                      Margin="0 20 0 0">
                    <Border Background="#eff2f7"
                            BorderThickness="3 0 0 0"
                            BorderBrush="Black">
                        <StackPanel>
                            <TextBlock Text="Thông tin tác giả"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="36"
                                       FontWeight="Bold"/>
                            <StackPanel Orientation="Horizontal"
                                        Margin="77 30 0 0">
                                <TextBlock Text="ID: "
                                           FontSize="20"
                                           FontWeight="DemiBold"
                                           VerticalAlignment="Center"/>
                                <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                         materialDesign:TextFieldAssist.TextBoxViewMargin="0 0 10 0" 
                                         FontSize="20"
                                         Width="250"
                                         Height="64"
                                         Margin="60 0 0 0"
                                         IsEnabled="False"
                                         Text="{Binding AuthorEdit.MaTG, Mode=TwoWay}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Margin="10 30 0 0">
                                <TextBlock Text="Họ và tên: "
                                           FontSize="20"
                                           FontWeight="DemiBold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                                <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                         materialDesign:TextFieldAssist.TextBoxViewMargin="0 0 10 0" 
                                         FontSize="20"
                                         Width="250"
                                         Height="58"
                                         Margin="60 0 0 0"
                                         IsEnabled="False"
                                         Text="{Binding AuthorEdit.TenTG, Mode=TwoWay}"
                                         x:Name="tentgTextBox"/>
                            </StackPanel>

                            <StackPanel Margin="0 200 0 0"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <Button Content="Chỉnh sửa"
                                        materialDesign:ButtonAssist.CornerRadius="10"
                                        materialDesign:ShadowAssist.ShadowAnimationDuration="0:0:0.5"
                                        Style="{StaticResource MaterialDesignRaisedLightButton}"
                                        Width="130"
                                        Height="40"
                                        Background="#473765"
                                        Foreground="White"
                                        FontSize="20"
                                        FontWeight="Bold"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="0 0 20 0"
                                        Command="{Binding OpenUpdateAuthorCM}"
                                        CommandParameter="{Binding ElementName=tentgTextBox}"/>
                                <Button Content="Lưu"
                                        materialDesign:ButtonAssist.CornerRadius="10"
                                        materialDesign:ShadowAssist.ShadowAnimationDuration="0:0:0.5"
                                        Style="{StaticResource MaterialDesignRaisedLightButton}"
                                        Width="130"
                                        Height="40"
                                        Background="#473765"
                                        Foreground="White"
                                        FontSize="20"
                                        FontWeight="Bold"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="0 0 0 0"
                                        Command="{Binding UpdateAuthorCM}"
                                        CommandParameter="{Binding ElementName=tentgTextBox}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Page>
